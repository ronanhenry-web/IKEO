@{
    ViewData["Title"] = "Panier";
    var nomEtape = ViewBag.nomEtape;
    var numEtape = ViewBag.numEtape;
    ViewData["EtapePanier"] = nomEtape;
}

<div class="position-relative m-4">
    <div class="progress" style="height: 1px;">
        <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <button type="button" id="btnEtape1" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">1</button>
    <button type="button" id="btnEtape2" class="position-absolute top-0 start-33 translate-middle btn btn-sm @(numEtape >= 2 ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem;">2</button>
    <button type="button" id="btnEtape3" class="position-absolute top-0 start-66 translate-middle btn btn-sm @(numEtape >= 3 ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem;">3</button>
    <button type="button" id="btnEtape4" class="position-absolute top-0 start-100 translate-middle btn btn-sm @(numEtape >= 4 ? "btn-primary" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem;">4</button>
</div>

<div class="container">
    <div class="col-md-12" id="partialViewContainer">
        @Html.Partial((String)nomEtape)
    </div>
</div>